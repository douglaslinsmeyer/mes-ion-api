# Server Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# ION API Configuration
ION_TENANT_ID=your-tenant-id
ION_CLIENT_ID=your-client-id
ION_CLIENT_SECRET=your-client-secret
ION_TOKEN_ENDPOINT=https://mingle-ionapi.inforcloudsuite.com/TENANT/as/token.oauth2
ION_API_ENDPOINT=https://mingle-ionapi.inforcloudsuite.com/TENANT
ION_SUBSCRIPTION_KEY=your-subscription-key
ION_ORGANIZATION=your-organization

# Cache Configuration
CACHE_DRIVER=memory
CACHE_TTL_SECONDS=300
# Redis configuration (for future use)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=
# REDIS_DB=0
# REDIS_PREFIX=mes-ion:

# Request Configuration
REQUEST_TIMEOUT_MS=30000
API_PREFIX=/api/v1

# Webhook Configuration (optional)
WEBHOOK_SECRET=your-webhook-secret

# Monitoring
HEALTH_CHECK_INTERVAL=30000

# Development Configuration
DEBUG=mes-ion-api:*
PRETTY_LOGS=true